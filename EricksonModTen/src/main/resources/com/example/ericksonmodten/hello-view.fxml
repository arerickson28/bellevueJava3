<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox fx:id="myVBox" alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.ericksonmodten.EricksonModTenController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <HBox spacing="200" alignment="CENTER">
        <VBox style="-fx-border-style:solid inside; -fx-border-color:lightblue; -fx-padding:10;" spacing="5">
            <HBox spacing="10" alignment="CENTER">
                <Label>Fan ID:</Label>
                <TextField fx:id="fanIdTextField" maxWidth="45"/>
            </HBox>
            <Button style="-fx-background-color:lightblue" text="Display" onAction="#onDisplayButtonClick"/>
        </VBox>
        <VBox style="-fx-border-style:solid inside; -fx-border-color:lightblue; -fx-padding:10;" spacing="5">
            <HBox spacing="10" alignment="CENTER">
                <Label>Favorite Team:</Label>
                <TextField fx:id="favTeamTextField" maxWidth="175"/>
            </HBox>
            <Button style="-fx-background-color:lightblue" text="Update" onAction="#onUpdateButtonClick"/>
        </VBox>
    </HBox>

    <VBox xmlns:fx="http://javafx.com/fxml" spacing="15" alignment="CENTER" fx:id="vboxContainer" />
</VBox>

